<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pay4free.in.allinone.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"  android:layout_height="200dp" android:background="#FFFFFF"
        android:id="@+id/linearLayout"
        >


        <EditText
            android:hint= "0" android:layout_marginLeft="15dp" android:layout_gravity="center_horizontal"
            android:gravity="bottom" android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edittext1"
            android:textSize="45sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_below="@+id/linearLayout">
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutH1"
        android:layout_width="match_parent" android:layout_marginTop="25dp"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:layout_below="@+id/linearLayout"
        android:orientation="horizontal"
        android:weightSum="1.0" >
        <Button
        android:id="@+id/button1"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="1"
            android:textSize="40sp" />
        <Button android:id="@+id/button2"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="2"
            android:textSize="40sp" />
        <Button
            android:id="@+id/button3" style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="3" android:textSize="40sp"
            />
        <Button
            android:id="@+id/buttonDevide"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="/"
            android:textSize="40sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:layout_below="@+id/linearLayoutH1"
        android:orientation="horizontal"
        android:weightSum="1.0" >
        <Button
            android:id="@+id/button4"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="#FFFFFF"
            android:text="4"
            android:textSize="40sp" />
        <Button android:id="@+id/button5"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="5"
            android:textSize="40sp" />
        <Button
            android:id="@+id/button6" style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="6" android:textSize="40sp"
            />
        <Button
            android:id="@+id/buttonmultiply"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="X"
            android:textSize="40sp"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayoutH3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:layout_below="@+id/linearLayoutH2"
        android:orientation="horizontal"
        android:weightSum="1.0" >
        <Button
            android:id="@+id/button7"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="7"
            android:textSize="40sp" />
        <Button android:id="@+id/button8"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="8"
            android:textSize="40sp" />
        <Button
            android:id="@+id/button9" style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#FFFFFF"
            android:text="9" android:textSize="40sp"
            />
        <Button
            android:id="@+id/buttonadd"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="+"
            android:textSize="40sp"
            />
    </LinearLayout>


        android:layout_weight=".25"<LinearLayout
    android:id="@+id/linearLayoutH5"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_weight=".25"
    android:layout_below="@+id/linearLayoutH4"
    android:orientation="horizontal"
    android:weightSum="1.0" >
    <Button
        android:id="@+id/button14"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="%"
        android:textSize="40sp" />
    <Button android:id="@+id/buttondot"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="."
        android:textSize="40sp" />
    <Button
        android:id="@+id/buttonsquare" style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="sqrt" android:textSize="30sp"
        />
    <Button
        android:id="@+id/button16"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="C"
        android:textSize="40sp"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutH6"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayoutH5"
        android:orientation="horizontal"
        android:weightSum="1.0" >
        <Button
            android:id="@+id/buttonS"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="Sin"
            android:textSize="30sp" />
        <Button android:id="@+id/buttonC"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="Cos"
            android:textSize="30sp" />
        <Button
            android:id="@+id/buttonT"   style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="Tan"  android:textSize="30sp"
            />
        <Button
            android:id="@+id/buttonl"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/colorAccent"
            android:text="Log"
            android:textSize="30sp"
            />
    </LinearLayout><LinearLayout
    android:id="@+id/linearLayoutH4"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/linearLayoutH3"
    android:orientation="horizontal"
    android:weightSum="1.0" >
    <Button
        android:id="@+id/button0"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="#FFFFFF"
        android:text="0"
        android:textSize="40sp" />
    <Button android:id="@+id/button12"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="!"
        android:textSize="40sp" />
    <Button
        android:id="@+id/buttoneq" style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="=" android:textSize="40sp"
        />
    <Button
        android:id="@+id/buttonsub"
        style="@style/ButtonText"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25"
        android:background="@color/colorAccent"
        android:text="-"
        android:textSize="40sp"
        />
</LinearLayout>
</RelativeLayout>
